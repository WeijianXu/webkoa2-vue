{
  "name": "webkoa2",
  "version": "0.1.0",
  "description": "a web framework based on koa2",
  "main": "index.js",
  "scripts": {
    "dll": "better-npm-run build:dll",
    "deploy": "gulp && webpack",
    "dev": "better-npm-run build:dev",
    "prod": "better-npm-run build:prod",
    "start": "node ./build/app.js"
  },
  "betterScripts": {
    "build:dll": {
      "command": "webpack --progress --colors --config ./webpack-dll.config.js"
    },
    "build:dev": {
      "command": "webpack --progress --colors",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    "build:prod": {
      "command": "webpack --progress --colors",
      "env": {
        "NODE_ENV": "prod"
      }
    }
  },
  "keywords": [
    "framework",
    "koa2"
  ],
  "author": "William Xu",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.5.0",
    "eslint-plugin-react": "^7.2.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-copy": "^1.0.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-watch": "^4.3.11",
    "html-webpack-plugin": "^2.29.0",
    "koa": "^2.3.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "postcss-css-variables": "^0.7.0",
    "postcss-cssnext": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "style-loader": "^0.18.2",
    "webpack": "^3.1.0",
    "webpack-livereload-plugin": "^0.11.0"
  },
  "dependencies": {
    "co": "^4.6.0",
    "koa-log4": "^2.2.1",
    "koa-simple-router": "^0.2.0",
    "koa-static": "^4.0.1",
    "koa-swig": "^2.2.1",
    "lodash": "^4.17.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  }
}
